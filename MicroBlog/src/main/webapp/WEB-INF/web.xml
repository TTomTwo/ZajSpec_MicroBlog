<?xml version="1.0" encoding="UTF-8"?>
<web-app
        id="WebApp_ID"
        version="2.4"
        xmlns="http://java.sun.com/xml/ns/j2ee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                            http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <display-name>Microblog</display-name> <!-- Nazwa aplikacji, wyświetlana w panelu administracyjnym serwera aplikacji -->

    <servlet>
        <servlet-name>mvc-dispatcher</servlet-name> <!-- Nazwa serwletu, który będzie obsługiwał żądania HTTP -->
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class> <!-- Klasa serwletu Spring MVC, która obsługuje routing żądań -->

        <init-param>
            <param-name>contextConfigLocation</param-name> <!-- Parametr inicjalizacyjny wskazujący na plik konfiguracyjny Springa -->
            <param-value>/WEB-INF/applicationContext.xml</param-value> <!-- Lokalizacja pliku konfiguracyjnego Springa -->
        </init-param>

        <load-on-startup>1</load-on-startup> <!-- Określa, że serwlet powinien być załadowany zaraz po uruchomieniu aplikacji (priorytet ładowania) -->
    </servlet>

    <servlet-mapping>
        <servlet-name>mvc-dispatcher</servlet-name> <!-- Powiązanie serwletu z określonymi wzorcami URL -->
        <url-pattern>/</url-pattern> <!-- Serwlet będzie obsługiwał wszystkie żądania na ścieżce głównej ("/") -->
    </servlet-mapping>

    <context-param>
        <param-name>contextConfigLocation</param-name> <!-- Parametr konfiguracyjny wskazujący na plik konfiguracyjny dla ogólnych ustawień aplikacji -->
        <param-value>/WEB-INF/rootApplicationContext.xml</param-value> <!-- Lokalizacja pliku konfiguracyjnego z ustawieniami kontekstu aplikacji -->
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class> <!-- Listener, który ładuje kontekst aplikacji Springa przy uruchomieniu aplikacji -->
    </listener>

</web-app>